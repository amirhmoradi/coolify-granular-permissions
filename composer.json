{
    "name": "amirhmoradi/coolify-enhanced",
    "description": "Enhanced Coolify v4 with granular permissions and encrypted S3 backups",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "coolify",
        "permissions",
        "access-control",
        "rbac",
        "backup-encryption",
        "rclone",
        "s3",
        "laravel"
    ],
    "authors": [
        {
            "name": "Amir H. Moradi",
            "email": "amir@example.com"
        }
    ],
    "homepage": "https://github.com/amirhmoradi/coolify-enhanced",
    "support": {
        "issues": "https://github.com/amirhmoradi/coolify-enhanced/issues",
        "source": "https://github.com/amirhmoradi/coolify-enhanced"
    },
    "autoload": {
        "psr-4": {
            "AmirhMoradi\\CoolifyEnhanced\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AmirhMoradi\\CoolifyEnhanced\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AmirhMoradi\\CoolifyEnhanced\\CoolifyEnhancedServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.0"
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "sort-packages": true
    }
}
